// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("MAIN_DATABASE_URL")
}

model User {
  userid    String  @id
  username  String
  onboarded Boolean  @default(false) 
  department Department? @relation(fields: [depid], references: [depid])
  depid Int?
  transferMaster TransferMaster[]
}

model Department {
  depid Int @id @default(autoincrement())
  depname String
  isactive Boolean @default(false) 
  users User[]
}

model Product {
  productid String @id
  productname String
  isactive Boolean @default(false) 
  transfers TransferMaster[]
}

model TransferMaster {
  transfermasterid Int @id @default(autoincrement())
  productid String
  product Product @relation(fields: [productid], references: [productid])
  startdate String
  startbyuserid String
  startuser User @relation(fields: [startbyuserid], references: [userid])
  transferdetails TransferDetail[]
}

model TransferDetail {
  transferdetailid Int @id @default(autoincrement())
  transfermasterid Int
  transfermaster TransferMaster @relation(fields:[transfermasterid],references: [transfermasterid])
  transferdate String
  fromuserid String
  touserid String
  status String @default("")
  reamrks String @default("")
}